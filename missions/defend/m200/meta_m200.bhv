Behavior = BHV_CutRange
{
  name                    = cutrange
  pwt                     = 100
  condition               = MODE == INTERCEPTING
  runflag                 = BOT_DIALOG_STATUS=Intercepting
  updates                 = CR_INTERCEPT_UPDATES
  templating              = spawn

  contact                 = v
  decay                   = 15,30
  extrapolate             = false
  on_no_contact_ok        = true
  time_on_leg             = 60

  giveup_dist             = 0
  patience                = 50
  pwt_inner_dist          = 12
  pwt_outer_dist          = 20
}

//#############################################################################
Behavior = BHV_StationKeep
{
  name                    = station_keep
  pwt                     = 100
  condition               = MODE==STATIONNING // example
  runflag                 = BOT_DIALOG_STATUS=Stationing

  center_activate         = true
  hibernation_radius      = 5
  inner_radius            = 4
  outer_radius            = 15
  outer_speed             = 5
  transit_speed           = 5
  swing_time              = 3

  visual_hints            = vertex_size = 1 // default
  visual_hints            = edge_color = light_blue // default
  visual_hints            = edge_size = 1 // default
  visual_hints            = label_color = white // default
  visual_hints            = vertex_color = red // default
}

//#############################################################################
Behavior = BHV_Cover
{
  name                    = cover
  pwt                     = 100
  condition               = MODE==COVERING
  runflag                 = BOT_DIALOG_STATUS=Covering
  
  team	 = $(VTEAM)
  enemies= $(ENEMIES)
  requestor = mokai_$(VTEAM)
  enemy_flag= $(EFLAG)

  speed                   = 2  //default
  distance_from_flag      = 10 //default

}

//#############################################################################
Behavior = BHV_AvoidCollision
{
  name       = avdcollision_
  pwt        = 75
  condition  = AVOID = true
  updates    = CONTACT_INFO
  endflag    = CONTACT_RESOLVED = $[CONTACT]
  templating = spawn

               contact = to-be-set
      on_no_contact_ok = true
           extrapolate = true
                 decay = 30,60

        pwt_outer_dist = 50
        pwt_inner_dist = 20
        completed_dist = 10
     min_util_cpa_dist = 5
     max_util_cpa_dist = 10
             pwt_grade = linear
   bearing_line_config = white:0, green:0.65, yellow:0.8, red:1.0
}
